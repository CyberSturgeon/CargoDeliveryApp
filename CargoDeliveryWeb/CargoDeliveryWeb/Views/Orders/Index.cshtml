@using CargoDeliveryWeb.Models
@model IEnumerable<Order>

@{
    ViewData["Title"] = "Список заказов";
}
<div class="container">
    <a asp-controller="Orders" asp-action="Create" class="btn btn-primary float-end">
        <i class="fas fa-plus"></i> Новый заказ
    </a>
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Номер заказа</th>
                <th>Город отправителя</th>
                <th>Город получателя</th>
                <th>Вес (кг)</th>
                <th>Дата получения</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.SenderCity</td>
                    <td>@item.ReceiverCity</td>
                    <td>@item.Weight.ToString("0.00")</td>
                    <td>@item.PickupDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                            <i class="fas fa-info-circle"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>