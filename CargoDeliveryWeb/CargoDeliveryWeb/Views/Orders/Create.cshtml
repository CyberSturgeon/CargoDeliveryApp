@model CargoDeliveryWeb.Models.Order

@{
    ViewData["Title"] = "Создание заказа";
}

<div class="container">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-user"></i> Данные отправителя</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="SenderCity" class="form-label">Город</label>
                            <input asp-for="SenderCity" class="form-control" placeholder="Введите город" />
                            <span asp-validation-for="SenderCity" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SenderAddress" class="form-label">Адрес</label>
                            <input asp-for="SenderAddress" class="form-control" placeholder="Введите адрес" />
                            <span asp-validation-for="SenderAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-user-tag"></i> Данные получателя</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="ReceiverCity" class="form-label">Город</label>
                            <input asp-for="ReceiverCity" class="form-control" placeholder="Введите город" />
                            <span asp-validation-for="ReceiverCity" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ReceiverAddress" class="form-label">Адрес</label>
                            <input asp-for="ReceiverAddress" class="form-control" placeholder="Введите адрес" />
                            <span asp-validation-for="ReceiverAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-box"></i> Характеристики груза</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Weight" class="form-label">Вес</label>
                            <div class="input-group">
                                <input asp-for="Weight" type="number" step="0.01"
                                       class="form-control" placeholder="0.00" />
                                <span class="input-group-text">кг</span>
                            </div>
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PickupDate" class="form-label">Дата получения</label>
                            <input asp-for="PickupDate" type="date"
                                   class="form-control"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="PickupDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-save"></i> Создать заказ
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-undo"></i> Отмена
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            $('#PickupDate').attr('min', new Date().toISOString().split('T')[0]);
        });
    </script>
}
